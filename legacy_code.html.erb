<%# index page: %>
<div class="top-picks">
  <h1>Top Picks</h1>
  <div>
    <% @movies.select { |movie| movie.year < 2010 unless movie.year.nil? }.sort_by { |movie| -movie.popularity }[0..9].each do |movie| %>
      <%= render "shared/movie_card", movie: movie %>
    <% end %>
  </div>
</div>
<div class="search-side">
  <%= render "shared/search", movies: @movies.to_json %>
</div>
